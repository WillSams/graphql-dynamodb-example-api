    "faker": "^4.1.0",
    "husky": "^6.0.0",
    "mocha": "^9.1.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "serverless-offline": "^8.3.1",
    "sleep": "^6.3.0"
