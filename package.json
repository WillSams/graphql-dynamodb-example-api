{
  "name": "backend-graphql-api",
  "version": "0.9.5",
  "description": "Example API using GraphQL and AWS DynamoDB SDK.",
  "main": "bootstrap.js",
  "scripts": {
    "deploy": "serverless deploy --stage staging ",
    "dev": "serverless offline start --httpPort 4040 --region localhost",
    "lint": "eslint . --ignore-pattern 'public/'",
    "lint-fix": "eslint src/**/*.js --fix",
    "seed": "NODE_ENV=development ./clean_db.sh && node src/seed.js",
    "test": "NODE_ENV=test ./clean_db.sh && mocha specs/**/*.spec.js --recursive --timeout 10000"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.18.0",
    "faker": "^4.1.0",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "sleep": "^6.3.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "apollo-server-core": "^3.9.0",
    "apollo-server-errors": "^3.3.1",
    "apollo-server-express": "^3.9.0",
    "aws-sdk": "^2.1162.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "graphql": "^16.5.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.3",
    "serverless-http": "^3.0.1",
    "uuid": "^8.3.2"
  }
}
