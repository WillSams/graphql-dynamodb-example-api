{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "Soccer": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "KeySchema": [
          {
            "AttributeName": "Id",
            "KeyType": "HASH"
          },
          {
            "AttributeName": "Metadata",
            "KeyType": "RANGE"
          }
        ],
        "AttributeDefinitions": [
          {
            "AttributeName": "Id",
            "AttributeType": "S"
          },
          {
            "AttributeName": "Metadata",
            "AttributeType": "S"
          },
          {
            "AttributeName": "TeamName",
            "AttributeType": "S"
          },
          {
            "AttributeName": "PlayerName",
            "AttributeType": "S"
          },
          {
            "AttributeName": "GameDay",
            "AttributeType": "S"
          }
        ],
        "GlobalSecondaryIndexes": [
          {
            "IndexName": "MetadataIndex",
            "KeySchema": [
              {
                "AttributeName": "Metadata",
                "KeyType": "HASH"
              }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            },
            "ProvisionedThroughput": {
              "ReadCapacityUnits": 1,
              "WriteCapacityUnits": 1
            }
          },
          {
            "IndexName": "MetadataGameIndex",
            "KeySchema": [
              {
                "AttributeName": "Metadata",
                "KeyType": "HASH"
              },
              {
                "AttributeName": "GameDay",
                "KeyType": "RANGE"
              }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            },
            "ProvisionedThroughput": {
              "ReadCapacityUnits": 1,
              "WriteCapacityUnits": 1
            }
          },
          {
            "IndexName": "MetadataPlayerIndex",
            "KeySchema": [
              {
                "AttributeName": "Metadata",
                "KeyType": "HASH"
              },
              {
                "AttributeName": "PlayerName",
                "KeyType": "RANGE"
              }
            ],
            "Projection": {
              "ProjectionType": "ALL"
            },
            "ProvisionedThroughput": {
              "ReadCapacityUnits": 1,
              "WriteCapacityUnits": 1
            }
          }
        ],
        "BillingMode": "PROVISIONED",
        "TableName": "Soccer",
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 1,
          "WriteCapacityUnits": 1
        }
      }
    },
    "TableSoccerReadCapacityScalableTarget": {
      "Type": "AWS::ApplicationAutoScaling::ScalableTarget",
      "DependsOn": "Soccer",
      "Properties": {
        "ServiceNamespace": "dynamodb",
        "ResourceId": "table/Soccer",
        "ScalableDimension": "dynamodb:table:ReadCapacityUnits",
        "MinCapacity": 1,
        "MaxCapacity": 10,
        "RoleARN": {
          "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/aws-service-role/dynamodb.application-autoscaling.amazonaws.com/AWSServiceRoleForApplicationAutoScaling_DynamoDBTable"
        }
      }
    },
    "TableSoccerReadCapacityScalingPolicy": {
      "Type": "AWS::ApplicationAutoScaling::ScalingPolicy",
      "DependsOn": "TableSoccerReadCapacityScalableTarget",
      "Properties": {
        "ServiceNamespace": "dynamodb",
        "ResourceId": "table/Soccer",
        "ScalableDimension": "dynamodb:table:ReadCapacityUnits",
        "PolicyName": "Soccer-read-capacity-scaling-policy",
        "PolicyType": "TargetTrackingScaling",
        "TargetTrackingScalingPolicyConfiguration": {
          "PredefinedMetricSpecification": {
            "PredefinedMetricType": "DynamoDBReadCapacityUtilization"
          },
          "ScaleOutCooldown": 60,
          "ScaleInCooldown": 60,
          "TargetValue": 70
        }
      }
    },
    "TableSoccerWriteCapacityScalableTarget": {
      "Type": "AWS::ApplicationAutoScaling::ScalableTarget",
      "DependsOn": "Soccer",
      "Properties": {
        "ServiceNamespace": "dynamodb",
        "ResourceId": "table/Soccer",
        "ScalableDimension": "dynamodb:table:WriteCapacityUnits",
        "MinCapacity": 1,
        "MaxCapacity": 10,
        "RoleARN": {
          "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/aws-service-role/dynamodb.application-autoscaling.amazonaws.com/AWSServiceRoleForApplicationAutoScaling_DynamoDBTable"
        }
      }
    },
    "TableSoccerWriteCapacityScalingPolicy": {
      "Type": "AWS::ApplicationAutoScaling::ScalingPolicy",
      "DependsOn": "TableSoccerWriteCapacityScalableTarget",
      "Properties": {
        "ServiceNamespace": "dynamodb",
        "ResourceId": "table/Soccer",
        "ScalableDimension": "dynamodb:table:WriteCapacityUnits",
        "PolicyName": "Soccer-write-capacity-scaling-policy",
        "PolicyType": "TargetTrackingScaling",
        "TargetTrackingScalingPolicyConfiguration": {
          "PredefinedMetricSpecification": {
            "PredefinedMetricType": "DynamoDBWriteCapacityUtilization"
          },
          "ScaleOutCooldown": 60,
          "ScaleInCooldown": 60,
          "TargetValue": 70
        }
      }
    },
    "TableSoccerIndexGameLogIndexReadCapacityScalableTarget": {
      "Type": "AWS::ApplicationAutoScaling::ScalableTarget",
      "DependsOn": "Soccer",
      "Properties": {
        "ServiceNamespace": "dynamodb",
        "ResourceId": "table/Soccer/index/GameLogIndex",
        "ScalableDimension": "dynamodb:index:ReadCapacityUnits",
        "MinCapacity": 1,
        "MaxCapacity": 10,
        "RoleARN": {
          "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/aws-service-role/dynamodb.application-autoscaling.amazonaws.com/AWSServiceRoleForApplicationAutoScaling_DynamoDBTable"
        }
      }
    },
    "TableSoccerIndexGameLogIndexReadCapacityScalingPolicy": {
      "Type": "AWS::ApplicationAutoScaling::ScalingPolicy",
      "DependsOn": "TableSoccerIndexGameLogIndexReadCapacityScalableTarget",
      "Properties": {
        "ServiceNamespace": "dynamodb",
        "ResourceId": "table/Soccer/index/GameLogIndex",
        "ScalableDimension": "dynamodb:index:ReadCapacityUnits",
        "PolicyName": "Soccer-index-GameLogIndex-read-capacity-scaling-policy",
        "PolicyType": "TargetTrackingScaling",
        "TargetTrackingScalingPolicyConfiguration": {
          "PredefinedMetricSpecification": {
            "PredefinedMetricType": "DynamoDBReadCapacityUtilization"
          },
          "ScaleOutCooldown": 60,
          "ScaleInCooldown": 60,
          "TargetValue": 70
        }
      }
    },
    "TableSoccerIndexGameLogIndexWriteCapacityScalableTarget": {
      "Type": "AWS::ApplicationAutoScaling::ScalableTarget",
      "DependsOn": "Soccer",
      "Properties": {
        "ServiceNamespace": "dynamodb",
        "ResourceId": "table/Soccer/index/GameLogIndex",
        "ScalableDimension": "dynamodb:index:WriteCapacityUnits",
        "MinCapacity": 1,
        "MaxCapacity": 10,
        "RoleARN": {
          "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/aws-service-role/dynamodb.application-autoscaling.amazonaws.com/AWSServiceRoleForApplicationAutoScaling_DynamoDBTable"
        }
      }
    },
    "TableSoccerIndexGameLogIndexWriteCapacityScalingPolicy": {
      "Type": "AWS::ApplicationAutoScaling::ScalingPolicy",
      "DependsOn": "TableSoccerIndexGameLogIndexWriteCapacityScalableTarget",
      "Properties": {
        "ServiceNamespace": "dynamodb",
        "ResourceId": "table/Soccer/index/GameLogIndex",
        "ScalableDimension": "dynamodb:index:WriteCapacityUnits",
        "PolicyName": "Soccer-index-GameLogIndex-write-capacity-scaling-policy",
        "PolicyType": "TargetTrackingScaling",
        "TargetTrackingScalingPolicyConfiguration": {
          "PredefinedMetricSpecification": {
            "PredefinedMetricType": "DynamoDBWriteCapacityUtilization"
          },
          "ScaleOutCooldown": 60,
          "ScaleInCooldown": 60,
          "TargetValue": 70
        }
      }
    }
  }
}